@{
    ViewData["Title"] = "Update Employee";
}
<h2>@ViewData["Title"]</h2>
@model WebApplication1.Models.Employee
<form class="form-inline" asp-controller="Employee" enctype="multipart/form-data" asp-action="UpdateEmployee" method="post">
    <div class="form-group">
        <label class="" for="id"></label>
        <input type="hidden" class="form-control" asp-for="Id" id="id">
    </div>
    <div class="form-group">
        <label class="" for="email">Email address:</label>
        <input type="email" class="form-control" asp-for="Email" id="email">
    </div>
    <div class="form-group">
        <label class="" for="name">Name:</label>
        <input type="text" class="form-control" asp-for="Name" id="name">
    </div>
    <div class="form-group">
        <label class="" for="address">Address:</label>
        <input type="text" class="form-control" asp-for="Address" id="address">
    </div>
    <div class="form-group">
        <label class="" for="job">Job Detail:</label>
        <input type="text" class="form-control" asp-for="Job" id="job">
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="inputCity" class="form-label">Phone</label>
            <input type="number" class="form-control" asp-for="Phone" id="inputCity">
        </div>
        <div class="col-md-6">
            <label for="inputCity" class="form-label">Post</label>
            <select class="form-select" aria-label="Default select example" asp-for="Post">
                <option value="BCA">BCA</option>
                <option value="BIM">BIM</option>
                <option value="BIT">BIT</option>
                <option value="MCA">MCA</option>
                <option value="BSCCSIT">BSCCSIT</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="inputZip" class="form-label">DOB:</label>
            <input type="Date" class="form-control" id="inputdate" asp-for="Dob">
        </div>
        <div class="col-md-6 py-5 ">
            <label class="form-check-label" for="inlineCheckbox1">Gender :</label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="inlineCheckbox1" value="Male" asp-for="Gender">
                <label class="form-check-label" for="inlineCheckbox1">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="inlineCheckbox2" value="Female" asp-for="Gender">
                <label class="form-check-label" for="inlineCheckbox2">Female</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="" for="formFilesm">Image:</label>
        <input type="file" class="form-control" asp-for="Image" id="formFilesm">
    </div><br>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>